doctype html
html(lang='en', itemscope, itemtype='http://schema.org/Blog')
  head
    meta(charset='utf-8')
    title=view.title
    link(rel='shortcut icon', href='/favicon.ico')
    link(rel='alternate', type='application/rss+xml', href='/feed')
    link(rel='search', type='application/opensearchdescription+xml', title=site.title, href='/opensearch.xml')
    link(rel='canonical', href=view.canonical)

    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='author', itemprop='creator', content=view.author.meta)
    meta(name='keywords', content=view.keywords)
    meta(name='description', property='og:description', itemprop='description', content=view.description)
    meta(property='og:site_name', content=site.title)
    meta(property='og:url', itemprop='url', content=view.canonical)
    meta(property='og:image', itemprop='image', content=view.images.cover)
    meta(name='twitter:title', itemprop='name', property='og:title', content=view.title)
    meta(name='twitter:description', content=view.description)
    meta(name='twitter:card', content='summary')
    meta(name='twitter:site', content='@ponyfoo')
    meta(name='twitter:creator', content=view.author.twitter)

    each image in view.images.list
      meta(property='og:image', content=image)

    //- twitter uses the last meta image, so we need to be after og:image tags
    meta(name='twitter:image:src', content=view.images.cover)

  body
    main=view.partial
