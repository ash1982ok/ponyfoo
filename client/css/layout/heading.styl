h1,
h2,
h3,
h4,
h5,
h6
  color strong
  font-weight bold

h1
  font-size 1.6em
h2
  font-size 1.5em
h3
  font-size 1.4em
h4
  font-size 1.3em
h5
  font-size 1.2em
h6
  font-size 1.1em

@media only screen and (min-width: 768px)
  h1
    font-size 2em
  h2
    font-size 1.8em
  h3
    font-size 1.6em
  h4
    font-size 1.4em
  h5
    font-size 1.3em
  h6
    font-size 1.2em

h1,
h2,
h3,
h4
  margin-bottom 15px
  padding-bottom 6px
  border-bottom 1px solid border
